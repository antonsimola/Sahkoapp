<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"

    android:layout_gravity="center">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="6"
        android:columnCount="2"
        android:layout_gravity="center"

        android:orientation="horizontal"
        android:useDefaultMargins="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirjaudu ulos"

            android:id="@+id/btn_logout"
            android:layout_gravity="left"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:onClick="showLoginDialog"
            android:nestedScrollingEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jimi Kataja"
            android:id="@+id/label_login"
            style="@style/tyolista_sisalto"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kieli"
            android:id="@+id/label_language"
            style="@style/tyolista_sisalto"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_margin="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_language"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dropdown"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Näytä ilmoitukset"
            android:id="@+id/label_notification"
            style="@style/tyolista_sisalto"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_margin="20dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_notif"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Käyttöohjeet"
            android:id="@+id/label_help"
            style="@style/tyolista_sisalto"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_margin="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ohjeet"
            android:id="@+id/btn_help"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="20dp"
            android:padding="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tietoa sovelluksesta"
            style="@style/tyolista_sisalto"
            android:id="@+id/label_info"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_margin="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tietoa"

            android:id="@+id/btn_info"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="20dp"
            android:padding="20dp" />

    </GridLayout>

</FrameLayout>