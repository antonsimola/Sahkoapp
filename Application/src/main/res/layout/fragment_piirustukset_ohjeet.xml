<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/piirustukset_ohjeet_main_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:background="#6699FF">

    <LinearLayout
        android:id="@+id/piirustukset_ohjeet_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <SearchView
            android:id="@+id/piirustukset_ohjeet_search_view"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:queryHint="@string/piirustukset_ohjeet_search_view"/>

        <Button
            android:id="@+id/piirustukset_ohjeet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/piirustukset_ohjeet_button"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <GridView
        android:id="@+id/piirustukset_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="80dp"
        android:horizontalSpacing="80dp"
        android:stretchMode="columnWidth"
        android:gravity="left" />
    <GridView
        android:id="@+id/ohjeet_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="80dp"
        android:horizontalSpacing="80dp"
        android:stretchMode="columnWidth"
        android:gravity="right" />
    </LinearLayout>
</LinearLayout>